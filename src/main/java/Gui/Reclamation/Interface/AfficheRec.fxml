<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="764.0" prefWidth="1163.0" style="-fx-background-color: #F2F2F2;"
            stylesheets="/style.css"
            xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Gui.Reclamation.Controllers.AfficheRec">

    <!-- Barre de navigation en haut -->
    <HBox spacing="20" alignment="CENTER_RIGHT" prefHeight="80" styleClass="navbar"
          AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <HBox alignment="CENTER_LEFT">
            <Label text="Eventora Menu" styleClass="nav-title"/>
        </HBox>
        <HBox spacing="20" alignment="CENTER_RIGHT">
            <Button text="🏠 Accueil" styleClass="nav-button" onAction="#goToAccueil" />
            <Button text="👨🏻‍💼 Utilisateur" styleClass="nav-button" />
            <Button text="📲 Réservation" styleClass="nav-button" onAction="#goToReservation"/>
            <Button text="🎁 Services" styleClass="nav-button" onAction="#goToService"/>
            <Button text="💎 Packs" styleClass="nav-button" onAction="#goToPack"/>
            <Button text="⭐ FeedBack" styleClass="nav-button" onAction="#goToFeedback"/>
            <Button text="🚨 Réclamations" styleClass="nav-button" onAction="#goToReclamation"/>
            <Button text="🔧 Paramètres" styleClass="nav-button" />
            <Button text="🛑 Déconnexion" styleClass="logout-button" />
        </HBox>
    </HBox>

    <!-- Contenu principal -->
    <VBox alignment="CENTER" spacing="20" styleClass="main-content"
          AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <!-- Titre de la page -->
        <Label prefHeight="55.0" prefWidth="600.0" text="⛔ Liste des Réclamations ⛔"
               style="-fx-font-size: 32px; -fx-text-fill: #131111; -fx-font-weight: bold;
                      -fx-text-alignment: center; -fx-alignment: center;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);">
            <font>
                <Font size="49.0" />
            </font>
        </Label>

        <!-- Ajouter, Actualiser, et Rechercher Buttons -->
        <HBox prefHeight="25.0" prefWidth="814.0" spacing="10">
            <Button onAction="#addReclamation" text="Ajouter"
                    style="-fx-background-color: #11a791; -fx-text-fill: white; -fx-font-weight: bold;-fx-pref-width: 250px; -fx-padding: 5px; -fx-border-radius: 5px;"/>
            <Button onAction="#refreshList" text="Actualiser"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;-fx-pref-width: 250px; -fx-padding: 5px; -fx-border-radius: 5px;"/>
            <TextField fx:id="searchField" promptText="Rechercher..."
                       style="-fx-pref-width: 250px; -fx-padding: 5px; -fx-border-radius: 5px;"/>
        </HBox>

        <!-- Tableau des réclamations -->
        <TableView fx:id="tableView" prefHeight="575.0" prefWidth="999.0"
                   style="-fx-border-color: #D1D1D1; -fx-border-radius: 8px;
                  -fx-background-color: white; -fx-padding: 10px;
                  -fx-selection-bar: #C8102E; -fx-selection-bar-text: white;">
            <columns>
                <TableColumn fx:id="colId" prefWidth="56.0" text="ID" />
                <TableColumn fx:id="colTitre" prefWidth="123.0" text="Titre" />
                <TableColumn fx:id="colDescription" prefWidth="247.0" text="Description" />
                <TableColumn fx:id="colType" prefWidth="208.0" text="Type" />
                <TableColumn fx:id="colStatut" prefWidth="94.0" text="Statut" />
                <TableColumn fx:id="colActions" prefWidth="282.0" text="Actions" />
            </columns>
        </TableView>

    </VBox>

</AnchorPane>
