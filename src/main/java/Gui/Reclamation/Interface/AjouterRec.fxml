<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Gui.Reclamation.Controllers.AjouterRec"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #FAF2EA;">

    <!-- Barre de navigation latérale -->
    <VBox prefWidth="200" prefHeight="600" style="-fx-background-color: #B39188; -fx-padding: 20px;" alignment="TOP_CENTER">
        <Label text="Menu" style="-fx-font-size: 22px; -fx-text-fill: #392E2C; -fx-font-weight: bold; -fx-padding: 10px;"/>
        <Button text="Home" style="-fx-background-color: transparent; -fx-text-fill: #392E2C; -fx-font-size: 16px; -fx-padding: 10px;"/>
        <Button text="Settings" style="-fx-background-color: transparent; -fx-text-fill: #392E2C; -fx-font-size: 16px; -fx-padding: 10px;"/>
        <Button text="Reclamation" style="-fx-background-color: #FFAE9D; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px;"/>
        <Button text="Services" style="-fx-background-color: transparent; -fx-text-fill: #392E2C; -fx-font-size: 16px; -fx-padding: 10px;"/>
        <Button text="Packs" style="-fx-background-color: transparent; -fx-text-fill: #392E2C; -fx-font-size: 16px; -fx-padding: 10px;"/>
        <Pane minHeight="350"/>
        <Button text="Déconnexion" style="-fx-background-color: #CCAEA4; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px;"/>
    </VBox>

    <!-- Contenu principal -->
    <VBox layoutX="220" layoutY="50" spacing="30" alignment="CENTER" prefWidth="650" prefHeight="500">
        <!-- Titre -->
        <Label text="Déposer une Réclamation" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #392E2C; -fx-padding: 10px;"/>

        <!-- Champ Titre de la Réclamation -->
        <TextField fx:id="titleField" promptText="Titre de la Réclamation" style="-fx-font-size: 16px; -fx-padding: 12px; -fx-border-color: #B39188; -fx-border-radius: 8px; -fx-background-radius: 8px;"/>

        <!-- Description -->
        <TextArea fx:id="descField" promptText="Expliquez votre problème..." style="-fx-font-size: 16px; -fx-padding: 12px; -fx-border-color: #B39188; -fx-border-radius: 8px; -fx-background-radius: 8px;"/>

        <!-- Boutons -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Soumettre" fx:id="submitButton" style="-fx-background-color: #FFAE9D; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12px 20px; -fx-border-radius: 8px;"/>
            <Button text="Annuler" fx:id="cancelButton" style="-fx-background-color: #CCAEA4; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12px 20px; -fx-border-radius: 8px;"/>
        </HBox>
    </VBox>
</AnchorPane>
