<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="687.0" prefWidth="1022.0" stylesheets="style.css"
            xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Gui.Utilisateurs.Controllers.AjouterUtilisateur">
    <HBox prefHeight="687.0" prefWidth="1022.0" spacing="0">
        <VBox prefHeight="687.0" prefWidth="220" styleClass="menu-vbox" alignment="TOP_CENTER">
            <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                <image>
                    <Image url="@/Images/EVENTORA.png" />
                </image>
            </ImageView>

            <Label alignment="CENTER" styleClass="menu-title" text="Eventora Menu"/>

            <VBox spacing="10">
                <Button text="🏠 Accueil" styleClass="menu-button"/>
                <Button text="👨🏻‍💼 Utilisateur" styleClass="menu-button"/>
                <Button text="📲 Réservation" styleClass="menu-button"/>
                <Button text="🎁 Services" styleClass="menu-button"/>
                <Button text="⭐ FeedBack" styleClass="menu-button"/>
                <Button styleClass="menu-button" text="🚨 Réclamations"/>
                <Button text="🔧 Paramètres" styleClass="menu-button"/>
                <Button text="🛑 Déconnexion" styleClass="logout-button"/>
            </VBox>
        </VBox>

        <VBox alignment="CENTER" layoutX="220" layoutY="50" prefHeight="687.0" prefWidth="802.0"
              spacing="20" styleClass="main-content">
            <Label text="Ajouter un Utilisateur" styleClass="title-label"/>

            <TextField fx:id="nomField" promptText="Entrez le nom" styleClass="text-field"/>
            <TextField fx:id="prenomField" promptText="Entrez le prénom" styleClass="text-field"/>
            <TextField fx:id="emailField" promptText="Entrez l'email" styleClass="text-field"/>
            <TextField fx:id="cinField" promptText="Entrez le CIN" styleClass="text-field"/>
            <TextField fx:id="adresseField" promptText="Entrez l'adresse" styleClass="text-field"/>
            <TextField fx:id="numTelField" promptText="Entrez le numéro de téléphone"
                       styleClass="text-field"/>
            <ComboBox fx:id="roleComboBox" promptText="Sélectionnez un rôle" styleClass="combo-box"/>

            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="ajouterButton" text="Ajouter Membre" onAction="#ajouterMembre"
                        styleClass="action-button modify-button"/>
                <Button fx:id="annulerButton" text="Annuler" onAction="#cancel"
                        styleClass="action-button cancel-button"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>