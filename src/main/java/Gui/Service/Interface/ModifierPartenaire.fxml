<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Gui.Service.Controllers.ModifierPartenaire"
            prefHeight="600.0" prefWidth="900.0"
            stylesheets="style.css"
            style="-fx-background-color: #F4F1F1;">

    <!-- Barre de navigation latérale -->
    <VBox prefWidth="220" prefHeight="600" style="-fx-background-color: #2C3E50; -fx-padding: 20px; -fx-spacing: 15px;">

        <!-- Titre -->
        <Label text="Eventora Menu" styleClass="menu-title" alignment="CENTER"/>

        <!-- Menu Buttons -->
        <VBox spacing="10">
            <Button text="🏠 Accueil" styleClass="menu-button"/>
            <Button text="👨🏻‍💼 Utilisateur" styleClass="menu-button"/>
            <Button text="📲 Réservation" styleClass="menu-button"/>
            <Button text="🎁 Services" styleClass="menu-button" onAction="#goToService"/>
            <Button text="⭐ FeedBack" styleClass="menu-button"/>
            <Button styleClass="menu-button" text="🚨 Réclamations" />
            <Button text="🔧 Paramètres" styleClass="menu-button"/>
            <Button text="🛑 Déconnexion" styleClass="logout-button"/>
        </VBox>
    </VBox>

    <!-- Contenu principal -->
    <VBox layoutX="240" layoutY="50" spacing="20" alignment="CENTER" prefWidth="650" prefHeight="500">
        <!-- Titre -->
        <Label text="Modifier une Partenaire" styleClass="main-title"/>
        <TextField fx:id="nomField" promptText="Nom de la Partenaire" styleClass="input-field"/>
        <TextField fx:id="emailField" promptText="Email de la Partenaire" styleClass="input-field"/>
        <TextField fx:id="telephoneField" promptText="Telephone de la Partenaire" styleClass="input-field"/>
        <TextField fx:id="adresseField" promptText="Adresse de la Partenaire" styleClass="input-field"/>
        <TextField fx:id="site_webField" promptText="Site web de la Partenaire" styleClass="input-field"/>
        <TextField fx:id="montantPartField" promptText="Montant de la Partenaire" styleClass="input-field"/>
        <ComboBox fx:id="typefield" promptText="Sélectionner un type de Partenaire" styleClass="input-field"/>

        <!-- Boutons -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Sauvegarder" fx:id="submitButton" styleClass="submit-button"/>
            <Button text="Annuler" fx:id="cancelButton" styleClass="cancel-button"/>
        </HBox>
    </VBox> <!-- Contenu principal -->

</AnchorPane>
