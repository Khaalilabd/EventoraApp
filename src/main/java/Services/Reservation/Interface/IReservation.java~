package Services.Reservation.Interface;

import Models.Reservation.Reservation;
import java.util.List;

public interface IReservation {
    // Ajouter une réservation de type ReservPack
    void ReserverPack(Reservation reservation);

    // Ajouter une réservation de type ReservationPersonalisée
    void ReserverPerso(Reservation reservation);

    // Modifier une réservation
    void ModifierReser(Reservation reservation);

    // Supprimer une réservation
    void SupprimerReserv(int idReservation);

    // Afficher toutes les réservations
    List<Reservation> AfficherReserv();

    // Rechercher des réservations par mot-clé
    List<Reservation> RechercherReservationParMotCle(String motCle);
}