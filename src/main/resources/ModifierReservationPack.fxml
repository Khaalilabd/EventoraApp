<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.paint.Color?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Gui.Reservation.Controllers.ModifierReservationPack"
            prefHeight="600.0" prefWidth="900.0"
            stylesheets="style.css"
            style="-fx-background-color: #F4F1F1;">

    <!-- Barre de navigation latérale -->
    <VBox prefWidth="220" prefHeight="600" style="-fx-background-color: #2C3E50; -fx-padding: 20px; -fx-spacing: 15px;">

        <!-- Titre -->
        <Label text="Eventora Menu" styleClass="menu-title" alignment="CENTER"/>

        <!-- Menu Buttons -->
        <VBox spacing="10">
            <Button text="🏠 Accueil" styleClass="menu-button"/>
            <Button text="👨🏻‍💼 Utilisateur" styleClass="menu-button"/>
            <Button text="📲 Réservation" styleClass="menu-button" onAction="#goToReservation" />
            <Button text="🎁 Services" styleClass="menu-button" onAction="#goToService"/>
            <Button text="💎 Packs" styleClass="menu-button" onAction="#goToPack"/>
            <Button text="⭐ FeedBack" styleClass="menu-button" onAction="#goToFeedback"/>
            <Button styleClass="menu-button" text="🚨 Réclamations" onAction="#goToReclamation"/>
            <Button text="🔧 Paramètres" styleClass="menu-button"/>
            <Button text="🛑 Déconnexion" styleClass="logout-button"/>
        </VBox>
    </VBox>

    <!-- Contenu principal -->
    <VBox layoutX="240" layoutY="50" spacing="20" alignment="CENTER" prefWidth="650" prefHeight="500">
        <!-- Titre -->
        <Label text="Modifier une Reservation" styleClass="main-title"/>

        <!-- Champ Titre de la Reservation -->
        <ComboBox fx:id="idPackfield" promptText="Sélectionnez un pack" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <TextField fx:id="nomfield" promptText="Entrez votre nom" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <TextField fx:id="prenomfield" promptText="Entrez votre prénom" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <TextField fx:id="emailfield" promptText="Entrez votre email" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <TextField fx:id="numtelfield" promptText="Entrez votre téléphone" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <TextArea fx:id="descriptionfield" promptText="Expliquez votre besoin..." styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <DatePicker fx:id="datefield" promptText="Sélectionnez une date" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="6" />


        <!-- Boutons -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Sauvegarder" fx:id="submitButton" styleClass="submit-button"/>
            <Button text="Annuler" fx:id="cancelButton" styleClass="cancel-button"/>
        </HBox>
    </VBox>
</AnchorPane>