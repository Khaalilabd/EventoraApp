<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="657.0" prefWidth="350.0"
      style="-fx-background-color: #FFFFFF;
      -fx-border-radius: 10;
       -fx-padding: 15; -fx-border-color: #D1D1D1;
        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);
" stylesheets="/ChatAi/chat.css" xmlns="http://javafx.com/javafx/20.0.2"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gui.ChatAi.Controllers.ChatAi">

    <!-- Titre du Chatbot -->
    <Label alignment="CENTER" prefHeight="27.0" prefWidth="338.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Evi" />

    <!-- Zone des messages -->
    <VBox fx:id="chatContainer" prefHeight="566.0" prefWidth="318.0" style="-fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0;                      -fx-border-radius: 5; -fx-font-size: 14px; -fx-padding: 10; -fx-spacing: 10;" />

    <!-- Zone d'entrée utilisateur -->
    <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">

        <!-- Champ de saisie -->
        <TextField fx:id="inputField" prefHeight="40.0" prefWidth="209.0" promptText="Écris ton message ici..." style="-fx-background-color: #FFFFFF; -fx-border-color: #D1D1D1;                           -fx-border-radius: 20; -fx-padding: 10;" />

        <!-- Bouton Envoyer -->
        <Button fx:id="sendButton" prefHeight="40.0" prefWidth="58.0" style="-fx-background-color: #0078D7; -fx-text-fill: white;                        -fx-background-radius: 50%; -fx-font-size: 18px;                        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 3);" text="➤" />
    </HBox>
</VBox>