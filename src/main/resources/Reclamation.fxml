<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Gui.Reclamation.Controllers.Reclamation"
            prefHeight="600.0" prefWidth="900.0"
            stylesheets="style.css">

    <!-- Barre de navigation latérale -->
    <VBox prefWidth="220" prefHeight="600" style="-fx-background-color: #2C3E50; -fx-padding: 20px; -fx-spacing: 15px;">
        <Label text="Eventora Menu" styleClass="menu-title" alignment="CENTER"/>

        <!-- Menu Buttons -->
        <VBox spacing="10">
            <Button text="🏠 Accueil" styleClass="menu-button"/>
            <Button text="👨🏻‍💼 Utilisateur" styleClass="menu-button"/>
            <Button text="📲 Réservation" styleClass="menu-button"/>
            <Button text="🎁 Services" styleClass="menu-button" onAction="#goToService"/>
            <Button text="💎 Packs" styleClass="menu-button"/>
            <Button text="⭐ FeedBack" styleClass="menu-button" onAction="#goToFeedback"/>
            <Button styleClass="menu-button" text="🚨 Réclamations" onAction="#goToReclamation"/>
            <Button text="🔧 Paramètres" styleClass="menu-button"/>
            <Button text="🛑 Déconnexion" styleClass="logout-button"/>
        </VBox>
    </VBox>

    <!-- Contenu principal modernisé -->
    <VBox layoutX="240" layoutY="30" spacing="20" alignment="CENTER" prefWidth="650" prefHeight="540" styleClass="main-container">

        <!-- En-tête attrayante -->
        <Label text="Besoin d'aide ? Faites-nous part de votre problème" styleClass="title-text"/>
        <Label wrapText="true" prefWidth="500" styleClass="description-text"
               text="Notre équipe est à votre écoute ! Soumettez votre réclamation et nous ferons notre maximum pour vous répondre rapidement."/>

        <!-- Image animée -->
        <ImageView fx:id="imageReclamation" fitWidth="400" fitHeight="400" preserveRatio="true">
            <image>
                <Image url="/Images/animated_support.gif"/>
            </image>
        </ImageView>

        <!-- Boutons avec animations -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="ajouterButton" text="➕ Déposer une Réclamation" styleClass="add-button" onAction="#handleAddAction"/>
            <Button fx:id="viewButton" text="📄 Consulter les Réclamations" styleClass="view-button" onAction="#handleViewAction"/>
        </HBox>

        <!-- Panneau d'informations -->
        <VBox spacing="10" alignment="CENTER" styleClass="info-box">
            <Label text="📌 Conseil : Décrivez précisément votre problème pour une meilleure assistance !" styleClass="info-text"/>
            <Label text="💡 Questions fréquentes" styleClass="faq-text"/>
        </VBox>
    </VBox>
</AnchorPane>
