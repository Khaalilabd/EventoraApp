<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.paint.Color?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Gui.Reclamation.Controllers.Reclamation"
            prefHeight="600.0" prefWidth="900.0">

    <!-- Barre de navigation latérale -->
    <VBox prefWidth="220" prefHeight="600" style="-fx-background-color: #34495E; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0, 5);" alignment="TOP_CENTER" spacing="20">
        <!-- Logo -->
        <ImageView fitWidth="120" fitHeight="120" preserveRatio="true" >
            <image>
                <Image url="@/Images/EVENTORA.png" />
            </image>
        </ImageView>

        <!-- Menu -->
        <Label text="Eventora Menu" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #ECF0F1; -fx-padding: 10;" alignment="CENTER"/>

        <!-- Menu Buttons -->
        <Button style="-fx-background-color: transparent; -fx-pref-height: 50; -fx-padding: 10; -fx-alignment: CENTER; -fx-text-fill: white; -fx-font-size: 16px;">
            <graphic>
                <ImageView fitHeight="40" fitWidth="40">
                    <Image url="@/Images/home.png" />
                </ImageView>
            </graphic>
            <text>
                Accueil
            </text>
        </Button>

        <Button style="-fx-background-color: transparent; -fx-pref-height: 50; -fx-padding: 10; -fx-alignment: CENTER; -fx-text-fill: white; -fx-font-size: 16px;">
            <graphic>
                <ImageView fitHeight="40" fitWidth="40">
                    <Image url="@/Images/settings.png" />
                </ImageView>
            </graphic>
            <text>
                Paramètres
            </text>
        </Button>

        <Button style="-fx-background-color: transparent; -fx-pref-height: 50; -fx-padding: 10; -fx-alignment: CENTER; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;">
            <graphic>
                <ImageView fitHeight="40" fitWidth="40">
                    <Image url="@/Images/reclamation.png" />
                </ImageView>
            </graphic>
            <text>
                Réclamations
            </text>
        </Button>

        <Button style="-fx-background-color: transparent; -fx-pref-height: 50; -fx-padding: 10; -fx-alignment: CENTER; -fx-text-fill: white; -fx-font-size: 16px;">
            <graphic>
                <ImageView fitHeight="40" fitWidth="40">
                    <Image url="@/Images/serivices.png" />
                </ImageView>
            </graphic>
            <text>
                Services
            </text>
        </Button>

        <Button style="-fx-background-color: transparent; -fx-pref-height: 50; -fx-padding: 10; -fx-alignment: CENTER; -fx-text-fill: white; -fx-font-size: 16px;">
            <graphic>
                <ImageView fitHeight="40" fitWidth="40">
                    <Image url="@/Images/logout.png" />
                </ImageView>
            </graphic>
            <text>
                Déconnexion
            </text>
        </Button>

        <!-- Footer -->
        <Pane minHeight="200"/>
    </VBox>

    <!-- Contenu principal -->
    <VBox layoutX="240" layoutY="50" spacing="20" alignment="CENTER" prefWidth="650" prefHeight="500">
        <!-- Texte avec retour à la ligne -->
        <Label wrapText="true" prefWidth="500" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2C3E50; -fx-padding: 10; -fx-text-alignment: center;"
               text="Vous avez rencontré un problème ou vous voulez poser une Réclamation ?\nPas de panique, Eventora vous propose tout un système de réclamation." />

        <!-- Bouton Ajouter centré -->
        <Button text="Ajouter"
                style="-fx-background-color: #1ABC9C;
                       -fx-text-fill: white;
                       -fx-font-size: 16px;
                       -fx-padding: 10 20;
                       -fx-border-radius: 10;
                       -fx-background-radius: 10;"/>
    </VBox>

</AnchorPane>
