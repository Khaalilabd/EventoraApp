<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gui.Service.Controllers.AjouterPartenaire">

    <!-- Barre de navigation latérale -->
    <VBox alignment="TOP_CENTER" prefHeight="1000" prefWidth="200" style="-fx-background-color: #B39188; -fx-padding: 20px;">
        <Label style="-fx-font-size: 22px; -fx-text-fill: #392E2C; -fx-font-weight: bold; -fx-padding: 10px;" text="Menu" />
        <Button style="-fx-background-color: transparent; -fx-text-fill: #392E2C; -fx-font-size: 16px; -fx-padding: 10px;" text="Home" />
        <Button style="-fx-background-color: transparent; -fx-text-fill: #392E2C; -fx-font-size: 16px; -fx-padding: 10px;" text="Settings" />
        <Button style="-fx-background-color: transparent; -fx-text-fill: #392E2C; -fx-font-size: 16px; -fx-padding: 10px;" text="Reclamation" />
        <Button style="-fx-background-color: #FFAE9D; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px;" text="Partenaire" />
        <Button style="-fx-background-color: transparent; -fx-text-fill: #392E2C; -fx-font-size: 16px; -fx-padding: 10px;" text="Packs" />
        <Pane minHeight="350" />
        <Button style="-fx-background-color: #CCAEA4; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px;" text="Déconnexion" />
    </VBox>

    <!-- Contenu principal -->
    <VBox alignment="CENTER" layoutX="220" layoutY="50" prefHeight="500" prefWidth="650" spacing="30">
        <!-- Titre -->
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #392E2C; -fx-padding: 10px;" text="Ajouter un partenaire" />


        <!-- Champ nom de partenaire -->
        <TextField fx:id="nomField" promptText="nom de partenaire" style="-fx-font-size: 16px; -fx-padding: 12px; -fx-border-color: #B39188; -fx-border-radius: 8px; -fx-background-radius: 8px;" />
        <!-- Champ email de partenaire -->
        <TextField fx:id="emailField" promptText="email de partenaire" style="-fx-font-size: 16px; -fx-padding: 12px; -fx-border-color: #B39188; -fx-border-radius: 8px; -fx-background-radius: 8px;" />
        <!-- Champ telephone de partenaire -->
        <TextField fx:id="telephoneField" promptText="telephone de partenaire" style="-fx-font-size: 16px; -fx-padding: 12px; -fx-border-color: #B39188; -fx-border-radius: 8px; -fx-background-radius: 8px;" />
        <!-- Champ adresse de partenaire -->
        <TextField fx:id="adresseField" promptText="adresse de partenaire" style="-fx-font-size: 16px; -fx-padding: 12px; -fx-border-color: #B39188; -fx-border-radius: 8px; -fx-background-radius: 8px;" />
        <!-- Champ site web de partenaire -->
        <TextField fx:id="site_webField" promptText="site web de partenaire" style="-fx-font-size: 16px; -fx-padding: 12px; -fx-border-color: #B39188; -fx-border-radius: 8px; -fx-background-radius: 8px;" />
        <!-- Champ montant de partenariat -->
        <TextField fx:id="montantPartField" promptText="montant de partenariat" style="-fx-font-size: 16px; -fx-padding: 12px; -fx-border-color: #B39188; -fx-border-radius: 8px; -fx-background-radius: 8px;" />
        <!-- Champ type partenariat -->
        <ComboBox fx:id="typefield" promptText="Type de partenariat" style="-fx-font-size: 16px;                  -fx-padding: 10px 20px;                  -fx-background-color: #ffffff;                  -fx-border-color: #B39188FF;                  -fx-border-width: 2px;                  -fx-border-radius: 8px;                  -fx-background-radius: 8px;                  -fx-text-fill: #333333;                  -fx-font-weight: 500;                  -fx-effect: dropshadow(gaussian, rgba(179, 145, 136, 100), 8, 0.5, 0, 2);                  -fx-prompt-text-fill: #8E8E8E;                  -fx-transition: all 0.3s ease;">
        </ComboBox>


        <!-- Boutons -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="submitButton" style="-fx-background-color: #FFAE9D; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12px 20px; -fx-border-radius: 8px;" text="Soumettre" />
            <Button fx:id="cancelButton" style="-fx-background-color: #CCAEA4; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12px 20px; -fx-border-radius: 8px;" text="Annuler" />
        </HBox>
    </VBox>

</AnchorPane>
