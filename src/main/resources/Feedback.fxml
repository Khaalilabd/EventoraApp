<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Gui.Reclamation.Controllers.Feedback"
            prefHeight="600.0" prefWidth="900.0"
            stylesheets="style.css">

    <!-- Barre de navigation latérale -->
    <VBox prefWidth="220" prefHeight="600" style="-fx-background-color: #2C3E50; -fx-padding: 20px; -fx-spacing: 15px;">
        <Label text="Eventora Menu" styleClass="menu-title" alignment="CENTER"/>

        <!-- Menu Buttons -->
        <VBox spacing="10">
            <Button text="🏠 Accueil" styleClass="menu-button"/>
            <Button text="👨🏻‍💼 Utilisateur" styleClass="menu-button"/>
            <Button text="📲 Réservation" styleClass="menu-button" onAction="#goToReservation" />
            <Button text="🎁 Services" styleClass="menu-button" onAction="#goToService"/>
            <Button text="💎 Packs" styleClass="menu-button" onAction="#goToPack"/>
            <Button text="⭐ FeedBack" styleClass="menu-button" onAction="#goToFeedback"/>
            <Button styleClass="menu-button" text="🚨 Réclamations" onAction="#goToReclamation"/>
            <Button text="🔧 Paramètres" styleClass="menu-button"/>
            <Button text="🛑 Déconnexion" styleClass="logout-button"/>
        </VBox>
    </VBox>

    <!-- Contenu principal centré -->
    <VBox layoutX="240" layoutY="30" spacing="20" alignment="CENTER" prefWidth="650" prefHeight="540" styleClass="main-container">

        <!-- Titre -->
        <Label text="Bienvenue dans l’espace Feedback 🌟 " styleClass="title-text"/>

        <!-- Texte d'introduction -->
        <Label wrapText="true" prefWidth="500" styleClass="main-text"
               text="Votre avis nous aide à améliorer nos services. Souhaitez-vous partager votre expérience ?" />

        <!-- Image illustrative -->
        <ImageView fx:id="imageFeedback" fitWidth="150" fitHeight="150" preserveRatio="true">
            <image>
                <Image url="/Images/feedback.gif"/>
            </image>
        </ImageView>

        <!-- Boutons avec actions -->
        <HBox spacing="30" alignment="CENTER">
            <Button fx:id="ajouterButton" text="✅ Oui, je veux donner mon avis" styleClass="add-button" onAction="#handleAddAction"/>
            <Button fx:id="annulerButton" text="❌ Non, merci" styleClass="cancel-button" onAction="#handleCancelAction"/>
        </HBox>

    </VBox>

</AnchorPane>
